<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#DADCBE"
    tools:context=".Tears">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:srcCompat="@drawable/tearstoomanymothers" />

        <View
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="6sp"
            android:layout_marginTop="213dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/roundBlock"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="222dp"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/TourLabel"
                android:layout_width="136dp"
                android:layout_height="42dp"
                android:background="@drawable/parchemin"
                android:fontFamily="@font/almendra_sc"
                android:text="Round"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#000000"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tourNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/almendra_sc"
                android:textColor="#000000"
                android:textSize="36sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ressourcesBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/roundBlock"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="150dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="150dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/easyRessource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/almendra_sc"
                    android:text="Easy"
                    android:textAlignment="center"
                    android:textColor="#2C6727"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/normalRessource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/almendra_sc"
                    android:paddingHorizontal="60dp"
                    android:text="Normal"
                    android:textAlignment="center"
                    android:textColor="#FF9800"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/startButton" />

                <TextView
                    android:id="@+id/hardRessource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/almendra_sc"
                    android:text="Hard"
                    android:textAlignment="center"
                    android:textColor="#C8362B"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/heroRessource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/almendra_sc"
                    android:text="Hero"
                    android:textAlignment="center"
                    android:textColor="#9C27B0"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/epicRessource"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/almendra_sc"
                    android:text="Epic"
                    android:textAlignment="center"
                    android:textColor="#9C27B0"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kingRessource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/almendra_sc"
                    android:text="King"
                    android:textAlignment="center"
                    android:textColor="#673AB7"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonBlock"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_above="@+id/ressourcesBlock"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="136dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/startButton"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginBottom="135dp"
                android:background="@drawable/parchemin"
                android:fontFamily="@font/almendra_sc"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:shadowColor="#000000"
                android:shadowDx="0.6"
                android:shadowRadius="0.8"
                android:text="Start"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="310dp"
            android:layout_height="73dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="41dp"
            android:layout_marginTop="-32dp"
            android:layout_marginEnd="41dp"
            android:layout_marginBottom="61dp">


            <Button
                android:id="@+id/restartButton"
                android:layout_width="59dp"
                android:layout_height="70dp"
                android:background="@drawable/ic_baseline_settings_backup_restore_24"
                android:backgroundTint="#000000"
                android:foreground="@drawable/ic_baseline_settings_backup_restore_24"
                android:textColor="#000000"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
